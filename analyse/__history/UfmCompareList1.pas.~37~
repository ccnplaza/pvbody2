procedure TfmCompareList1.BitBtn1Click(Sender: TObject);
var
  fname : string;
begin
  fname := gsLocalImageFolder + '\image_murge.jpeg';
  ImageEnView1.IO.LoadFromFileIEN(IMAGE_FILE);
end;

